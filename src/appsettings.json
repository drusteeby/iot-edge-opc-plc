{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "OpcPlc": {
    "ProgramName": "OpcPlc",

    // Authentication Settings
    "DisableAnonymousAuth": false,
    "DisableUsernamePasswordAuth": false,
    "DisableCertAuth": false,
    "AdminUser": "sysadmin",
    "AdminPassword": "demo",
    "DefaultUser": "user1",
    "DefaultPassword": "password",

    // OpenTelemetry (OTLP) Settings
    "OtlpEndpointUri": "http://localhost:4317",
    "OtlpExportInterval": "00:01:00",
    "OtlpExportProtocol": "grpc",
    "OtlpPublishMetrics": "auto",

    // Publisher Configuration
    "ShowPublisherConfigJsonIp": true,
    "ShowPublisherConfigJsonPh": false,
    "WebServerPort": 8080,
    "PnJson": "pn.json",

    // Logging Configuration
    "LogFileName": "hostname-port-plc.log",
    "LogLevelCli": "info",
    "LogFileFlushTimeSpanSec": "00:00:30",

    // Server Behavior
    "RunInChaosMode": false,
    "ShowHelp": false,

    // OPC UA Server Configuration
    "OpcUa": {
      "ServerPort": 50000,
      "ServerPath": "",
      "Hostname": "localhost",
      "OpcMaxStringLength": 1048576,
      "EnableUnsecureTransport": false,
      "AutoAcceptCerts": false,
      "DontRejectUnknownRevocationStatus": false,
      "TrustMyself": false,
      "LdsRegistrationInterval": 0,
      "MaxSessionCount": 100,
      "MaxSessionTimeout": 3600000,
      "MaxSubscriptionCount": 100,
      "MaxQueuedRequestCount": 2000,

      // Certificate Store Configuration
      "OpcOwnCertStoreType": "Directory",
      "OpcOwnCertStorePath": "pki/own",
      "OpcTrustedCertStorePath": "pki/trusted",
      "OpcRejectedCertStorePath": "pki/rejected",
      "OpcIssuerCertStorePath": "pki/issuer",
      "ShowCreateSigningRequestInfo": false,

      // Certificate Management
      "NewCertificateBase64String": null,
      "NewCertificateFileName": null,
      "CertificatePassword": "",
      "PrivateKeyBase64String": null,
      "PrivateKeyFileName": null,
      "IssuerCertificateBase64Strings": [],
      "IssuerCertificateFileNames": [],
      "TrustedCertificateBase64Strings": [],
      "TrustedCertificateFileNames": [],
      "CrlFileName": null,
      "CrlBase64String": null,
      "ThumbprintsToRemove": [],
      "DnsNames": []
    },

    // Simulation Configuration
    "Simulation": {
      "SimulationCycleCount": 50,
      "SimulationCycleLength": 100,
      "EventInstanceCount": 0,
      "EventInstanceRate": 1000,
      "AddAlarmSimulation": false,
      "AddSimpleEventsSimulation": false,
      "DeterministicAlarmSimulationFile": null
    },

    // Data Generation Flags
    "DataGeneration": {
      "NoDataValues": false,
      "NoDips": false,
      "NoSpikes": false,
      "NoPosTrend": false,
      "NoNegTrend": false
    },

    // Slow Nodes Configuration
    "SlowNodes": {
      "NodeCount": 1,
      "NodeRate": 10,
      "NodeType": "UInt",
      "NodeMinValue": null,
      "NodeMaxValue": null,
      "NodeRandomization": false,
      "NodeStepSize": "1",
      "NodeSamplingInterval": 0
    },

    // Fast Nodes Configuration
    "FastNodes": {
      "NodeCount": 1,
      "NodeRate": 1,
      "VeryFastRate": 1000,
      "NodeType": "UInt",
      "NodeMinValue": null,
      "NodeMaxValue": null,
      "NodeRandomization": false,
      "NodeStepSize": "1",
      "NodeSamplingInterval": 0
    },

    // Very Fast ByteString Nodes Configuration
    "VeryFastByteStringNodes": {
      "NodeCount": 1,
      "NodeSize": 1024,
      "NodeRate": 1000
    },

    // GUID Nodes Configuration
    "GuidNodes": {
      "NodeCount": 1
    },

    // Boiler #2 Configuration
    "Boiler2": {
      "TemperatureSpeed": 1,
      "BaseTemperature": 10,
      "TargetTemperature": 80,
      "MaintenanceInterval": 300,
      "OverheatInterval": 120
    },

    // File-based Node Configuration
    "NodesFile": null,
    "UaNodesFiles": [],
    "NodeSet2Files": []
  }
}
